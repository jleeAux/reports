{
  "ConnectionStrings": {
    "DataWarehouse": "YOUR_CONNECTION_STRING_HERE"
  },
  "TestMode": {
    "Enabled": false,
    "TestRecipient": "test@example.com",
    "AddTestBanner": true
  },
  "SendGrid": {
    "ApiKey": "YOUR_SENDGRID_API_KEY_HERE",
    "FromEmail": "noreply@example.com",
    "FromName": "Your Name"
  },
  "ReportSettings": {
    "StoredProcedure": "pRecurringCronEpoch",
    "Recipients": [
      {
        "Email": "recipient@example.com",
        "Name": "Recipient Name"
      }
    ],
    "OutputPath": "/srv/reports/output",
    "RetentionDays": 30
  },
  "DailyDonationsReport": {
    "Enabled": true,
    "Schedule": "0 9 8 * * ?",
    "Recipients": [
      {
        "Email": "recipient@example.com",
        "Name": "Recipient Name"
      }
    ],
    "IncludeAttachment": true,
    "GroupBySource": true,
    "ShowSubtotals": true,
    "ShowGrandTotal": true
  },
  "Scheduler": {
    "CronExpression": "0 20 5 * * ?",
    "TimeZone": "America/New_York"
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/srv/logs/reports/report-service-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  }
}